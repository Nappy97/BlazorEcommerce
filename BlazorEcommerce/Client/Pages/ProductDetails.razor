@page "/Product/{id:int}"

@if (product == null)
{
    <span>@message</span>
}
else
{
    <div class="media">
        <div class="media-img-wrapper mr-2">
            <img class="media-img" src="@product.ImageUrl" alt="@product.Title"/>
        </div>
        <div class="media-body">
            <h2 class="mb-0">@product.Title</h2>
            <p>@product.Description</p>
            @if (GetSelectVariant() != null)
            {
                if (GetSelectVariant().OriginalPrice > GetSelectVariant().Price)
                {
                    <h6 class="text-muted original-price">
                        $@GetSelectVariant().OriginalPrice
                    </h6>
                }
                <h4 class="price">
                    $@GetSelectVariant().Price
                </h4>
            }


        </div>
    </div>
}